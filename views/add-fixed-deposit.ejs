        function convertToDDMMYYYY(dateStr) {
            let parts = dateStr.split("-");
            if (parts.length !== 3) {
                console.error("Invalid date format:", dateStr);
                return null;
            }
            
            let yyyy = parts[0];
            let mm = parts[1].padStart(2, "0"); // Ensure 2 digits
            let dd = parts[2].padStart(2, "0");

            return `${dd}-${mm}-${yyyy}`;
        }
        function parseDate(dateStr) {
            const [day, month, year] = dateStr.split("-").map(Number);
            return new Date(year, month - 1, day);
        }


        let fundList = [];  
        let inputField = document.getElementById("fundInput");
        async function loadFunds() {
            try {
                const response = await fetch("https://api.mfapi.in/mf");
                fundList = await response.json();

                let fundNames = fundList.map(fund => fund.schemeName);
                
                new Awesomplete(inputField, { list: fundNames });

            } catch (error) {
                console.error("Error fetching fund list:", error);
            }
        }

        async function fetchNAV(){
            document.getElementById('fund_code').value = "";
            document.getElementById("fund_nav").value = "";
            // submitbtn.disabled = true;
            let userInput = inputField.value.trim();
            if(userInput=="") return;
            let selectedFund = fundList.find(fund => fund.schemeName.toLowerCase() === userInput.toLowerCase());
           
            if (!selectedFund) {
                alert("Fund not found! Please select from the suggestions.");
                return;
            }

            // document.getElementById("fundCodeDisplay").innerHTML = `Fund Code: ${selectedFund.schemeCode}`;
           document.getElementById('fund_code').value = selectedFund.schemeCode;
            try {
                const response = await fetch(`https://api.mfapi.in/mf/${selectedFund.schemeCode}`);
                const datarec = await response.json();
                const sortedNavData = datarec.data.sort((a, b) => parseDate(b.date) - parseDate(a.date));

                    const targetDate = parseDate(convertToDDMMYYYY(document.getElementById("invest_date").value));
                    let latestNav = null;

                    for (const entry of sortedNavData) {
                        const entryDate = parseDate(entry.date);
                        if (entryDate <= targetDate) {
                            latestNav = entry.nav;
                            break;
                        }
                    }
                console.log(latestNav)
                document.getElementById("fund_nav").value = latestNav;
            } catch (error) {
                console.error("Error fetching NAV:", error);
                // document.getElementById("navDisplay").innerHTML = "Error fetching NAV.";
            }
            // submitbtn.disabled = true;
        }

      
